{
  "name": "generator-zotero-plugin",
  "version": "3.0.0",
  "description": "Zotero Plugin",
  "homepage": "https://retorque.re",
  "author": {
    "name": "Emiliano Heyns",
    "email": "emiliano.heyns@iris-advies.com",
    "url": "https://retorque.re"
  },
  "files": [
    "app",
    ".eslintignore",
    ".eslintrc.json"
  ],
  "main": "app/index.js",
  "keywords": [
    "zotero",
    "yeoman",
    "typescript",
    "yeoman-generator"
  ],
  "engines": {
    "npm": ">= 4.0.0"
  },
  "dependencies": {
    "@types/mocha": "^10.0.1",
    "@types/yeoman-generator": "^5.2.11",
    "jest": "^29.5.0",
    "lodash": "^4.17.21",
    "mocha": "^10.2.0",
    "mock-require": "^3.0.3",
    "textdiff-create": "^1.0.9",
    "textdiff-patch": "^1.0.9",
    "tslib": "^2.5.0",
    "yeoman-assert": "^3.1.1",
    "yeoman-generator": "^5.8.0",
    "yeoman-test": "^7.4.0",
    "yosay": "^2.0.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "esbuild": "^0.17.15",
    "eslint": "^8.38.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^40.1.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "mkdirp": "^2.1.6",
    "npm-run-all": "^4.1.5",
    "rimraf": "^4.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "zotero-plugin": "^1.4.17",
    "zotero-types": "^1.0.13"
  },
  "scripts": {
    "pretest": "npm start",
    "test": "rm -rf test-plugin && mkdir test-plugin && cd test-plugin && yo zotero-plugin && npm run build",
    "preversion": "npm start",
    "postversion": "npm publish",
    "xupstream": "echo upstream",
    "upstream": "git submodule update --remote --merge && cd app/templates/make-it-red && git fetch upstream && git checkout main && git rebase upstream/main",
    "compile": "tsc",
    "prestart": "npm run xupstream",
    "lint": "eslint . --ext .ts --cache --cache-location .eslintcache/",
    "start": "npm-run-all --parallel lint compile",
    "prepublishOnly": "npm start",
    "ncu": "ncu -u && npm i && git add package.json package-lock.json && git commit -m ncu"
  },
  "repository": "retorquere/generator-zotero-plugin",
  "license": "MIT"
}
